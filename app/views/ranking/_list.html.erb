<div class="container">
  <div class="container-inner inner-default clearfix">
    <% @items.each_with_index do |(item_id, value), i| %>
      <% item = Item.find(item_id) %>
      <div class="item-box item-ranking<%= i+1 %>">
        <span class="ranking-count"><%= i+1 %></span>
        <div class="image">
          <div class="img-wrap">
            <% if item.large_image.present? %>
              <%= image_tag(item.large_image , alt: item.title) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: item.title) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <%= item.title %>
          </p>
        </div>
        <% if logged_in? %>
          <%= render 'items/action' , item: item %>
        <% else %>
          <div class="action">
            <%= link_to "詳細" , item.detail_page_url , class: "btn btn-info btn-sm" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>